<!doctype html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <meta charset="UTF-8">
    <title>Главная страница</title>
</head>
<body>
    {{> menu}}
    <div class="container-fluid mt-3">
        {{#if Empty}}
            <h2 class="text-center">Нет задач</h2>
        {{else}}
                <div>
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                        <tr><th>Заголовок</th><th>Описание</th><th>Дата и время начала</th>
                            <th>Дата и время завершения</th><th>Завершена</th></tr>
                        </thead>
                        <tbody>
                        {{#each activities}}
                            <tr>
                                <td><a href="/editActivity?id={{this.id}}">{{this.name}}</a></td>
                                <td>{{this.description}}</td>
                                <td>{{toDate this.startDate}}</td>
                                <td>{{toDate this.finishDate}}</td>
                                {{#if this.isFinished}}
                                    <td>Да</td>
                                {{else}}
                                    <td>Нет</td>
                                {{/if}}
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
        {{/if}}
    </div>
</body>
</html>